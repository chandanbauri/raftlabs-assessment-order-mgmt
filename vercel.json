{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "backend/api/main.go"
        },
        {
            "source": "/(.*)",
            "destination": "frontend/$1"
        }
    ],
    "redirects": [
        {
            "source": "/",
            "destination": "/frontend/",
            "type": 301
        }
    ]
}